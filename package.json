    "@types/etag": "^1.8.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node-fetch": "^2.6.4",
    "@types/semver": "^7.5.0",
    "@types/serve-static": "^1.15.2",
    "@vitest/coverage-v8": "^0.32.2",
    "better-sqlite3": "^8.4.0",
    "changelogen": "^0.5.3",
    "edge-runtime": "^2.4.4",
    "eslint": "^8.43.0",
    "eslint-config-unjs": "^0.2.1",
    "execa": "^7.1.1",
    "expect-type": "^0.16.0",
    "get-port-please": "^3.0.1",
    "miniflare": "^2.14.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "undici": "^5.22.1",
    "vitest": "^0.32.2"
  },
  "packageManager": "pnpm@8.6.5",
  "engines": {
    "node": "^14.16.0 || ^16.11.0 || >=17.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "@types/react",
        "react-dom",
        "@algolia/client-search"
      ]
    }
  }
}
