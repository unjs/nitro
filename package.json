    "@types/http-proxy": "^1.17.10",
    "@types/node-fetch": "^2.6.3",
    "@types/semver": "^7.3.13",
    "@types/serve-static": "^1.15.1",
    "@vitest/coverage-c8": "^0.30.1",
    "changelogen": "^0.5.2",
    "edge-runtime": "^2.1.2",
    "eslint": "^8.38.0",
    "eslint-config-unjs": "^0.1.0",
    "execa": "^7.1.1",
    "expect-type": "^0.15.0",
    "miniflare": "^2.13.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.0",
    "undici": "^5.21.2",
    "vitest": "^0.30.1"
  },
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "node": "^14.16.0 || ^16.11.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "@types/react",
        "react-dom",
        "@algolia/client-search"
      ]
    }
  }
}